<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
</head>
<body>
    <% if (locals.id) { %>
     <p>URL Generated:http://localhost:3000/url/<%= id %></p>
    <% } %>
    <h2>URL Shortener</h2>
    <form action="/url" method="POST">
        <label for="longUrl">Enter URL:</label>
        <input type="url" id="longUrl" name="url" required placeholder="https://example.com">
        <button type="submit">Shorten</button>
    </form>

    <% if (locals.urls) { %>
        <table border="1">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Short URL</th>
                    <th>Original URL</th>
                    <th>Visits</th>
                </tr>
            </thead>
            <tbody>
                <% urls.forEach((url, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><a href="<%= url.shortId %>"><%= url.shortId %></a></td>
                        <td><a href="<%= url.redirectURL %>" target="_blank"><%= url.redirectURL %></a></td>
                        <td><%= url.visitHistory.length %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        
    <% } %>
</body>
</html>



